{
  "name": "app-pc",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "build:app": "alita build",
    "dev:app": "alita dev",
    "format": "prettier --write .",
    "lint-staged": "lint-staged",
    "lint-staged:js": "eslint --ext .ts,.tsx",
    "plugin": "alita plugin list",
    "start": "alita dev",
    "test": "jest"
  },
  "lint-staged": {
    "**/*.less": "stylelint --syntax less",
    "**/*.css": "stylelint --syntax css",
    "**/*.{ts,tsx}": "npm run lint-staged:js",
    "**/*.{ts,tsx,json,jsx,less}": [
      "git add",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@alita/flow": "*",
    "@lingxiteam/types": "3.3.1-alpha.1",
    "alita": "3.3.7",
    "antd": "4.18.8",
    "@lingxiteam/icons": "*",
    "@lingxiteam/assets": "3.3.1-alpha.7",
    "@lingxiteam/engine-pc": "3.2.1-alpha.44",
    "@lingxiteam/engine-assets": "3.2.1-alpha.44",
    "@lingxiteam/sys-action": "3.2.1-alpha.44",
    "@lingxiteam/engine-command": "3.2.1-alpha.44",
    "@lingxiteam/engine-meta": "3.2.1-alpha.44",
    "@lingxiteam/engine-platform": "3.2.1-alpha.44",
    "@lingxiteam/engine-plog": "3.2.1-alpha.44",
    "@lingxiteam/engine-sandbox": "3.2.1-alpha.44",
    "@lingxiteam/engine-utils": "3.2.1-alpha.44",
    "@lingxiteam/pcfactory": "3.3.1-alpha.4"
  },
  "devDependencies": {
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "cross-env": "^6.0.3",
    "prettier": "^2",
    "ts-node": "^10",
    "typescript": "^4"
  },
  "engines": {
    "node": ">=14.0.1"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "alita verify-commit"
  }
}
